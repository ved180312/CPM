<strong>Name:</strong> <%= current_user.name if current_user %></br>
<strong>Email:</strong> <%= current_user.email  if current_user%>
<div class="main2">
</div>
<%if current_user.admin %>
<body>
<table class="table table-bordered border-primary m-3" >
  <thead class="table-dark">
  </tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
    </tr>
  </thead>

  <tbody class="table-primary">
    <% @user.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <% if u.admin==true %>
          <td><%= "Admin"%></td>
        <%else%>
           <td><%= "Customer" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
<%end%>
